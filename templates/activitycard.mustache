<style>
.activity.modtype_medalhasproitec {
    border: none;
    position: relative;
    .no-overflow {
        overflow: unset;
    }
}
.activity.modtype_medalhasproitec .activity-icon,
.activity.modtype_medalhasproitec .activity-name-area {
    display: none !important;
}
.activity.modtype_medalhasproitec .activity-description {
    border: none !important;
    padding-top: 0 !important;
    margin-top: 0 !important;
}
.activity.modtype_medalhasproitec .opaco {
    filter: grayscale(100%);
}

.activity.modtype_medalhasproitec .badge-container {
    position: relative;
    display: inline-block;
    margin: 5px;
}

.badge-container .tooltip {
    visibility: hidden;
    background-color: #333;
    color: #fff;
    text-align: center;
    border-radius: 6px;
    padding: 5px 8px;
    position: absolute;
    z-index: 1;
    bottom: 125%;
    left: 50%;
    transform: translateX(-50%);
    opacity: 0;
    transition: opacity 0.3s;
    white-space: nowrap;
    font-size: 12px;
}

.badge-container:hover .tooltip {
    visibility: visible;
    opacity: 1;
}

.badge-container img {
    width: 48px;
}

.dialog-box {
    width: 300px;
    background-color: white;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0,0,0,0.2);
    text-align: center;
}
.dialog-box button {
    margin-top: 10px;
    padding: 8px 15px;
    border: none;
    background-color: #0084ff;
    color: white;
    border-radius: 5px;
    cursor: pointer;
}
.dialog-box button:hover {
    background-color: #005bb5;
}

</style>

